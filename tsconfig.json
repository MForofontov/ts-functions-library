{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "lib": ["es2023", "dom"],
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "arrayFunctions",
    "dateFunctions",
    "encodingFunctions",
    "mathFunctions",
    "objectFunctions",
    "stringFunctions",
    "utilityFunctions"
  ],
  "exclude": [
    "functionsUnittests",
    "dist",
    "node_modules"
  ]
}
